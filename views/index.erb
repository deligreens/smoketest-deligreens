<div id="stripe-form">
  <form action="/bienvenue" method="post">
    <article>
      <label class="amount">
        <span>Montant : <%= @amount_humanize %>€</span>
      </label>
    </article>

    <script
      src="https://checkout.stripe.com/v3/checkout.js" class="stripe-button"
      data-key="<%= settings.publishable_key %>"
      data-label="S'abonner"
      data-name="Deligreens"
      data-description="Abonnement 3 mois (3 x 29,99€)"
      data-image="https://dl.dropboxusercontent.com/u/42217280/logo_deligreens_github.png"
      data-amount="<%= @amount %>"
      data-locale="auto"
      data-currency="eur">
    </script>
  </form>
</div>
